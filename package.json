{
  "publisher": "EricSpencer",
  "name": "flatten-repo",
  "displayName": "flatten-repo",
  "description": "Flattens codebase into a .txt file for LLMs",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:flatten-repo.flattenProjectToTxt"
  ],  
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flatten-repo.flattenProjectToTxt",
        "title": "Flatten Project to TXT"
      }
    ]
  },  
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.23.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
